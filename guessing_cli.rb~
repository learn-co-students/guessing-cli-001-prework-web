# Code your solution here!
def run_guessing_game
	while 1 < 2
		puts "Guess a number between 1 and 6."
		guess = gets.chomp
		num = (rand(6)+1).to_s
		if guess == "exit"
			puts "Goodbye!"
			break
		elsif guess == num
			puts "You guessed the correct number!"
		else
			puts "The computer guessed #{num}."
		end
	end
end
